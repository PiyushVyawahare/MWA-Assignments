<%- include("partials/header", {loggedIn: loggedIn, username: username, profile_pic: profile_pic}) %>

    <div id="btnDiv">
        <button class="goToHomeBtn" id="goToHomeBtn">Go to Home..</button>
    </div>

    <div class="mainDiv">
        <h1>Update Product</h1>
        <% if(error) { %>
            <p id="errorNode"><%= error %></p>
        <% } %>
        <form method="post" action="/updateProduct/<%= product._id %>" enctype="multipart/form-data">
            <input type="file" name="product_pic" id="product_pic"><br>
            <input type="text" name="productname" id="productname" value="<%= product.product_name %>" placeholder="Enter product name*" required><br>
            <input type="number" name="productprice" id="productprice" value="<%= product.product_price %>" placeholder="Enter Price*" required><br>
            <input type="number" name="productstock" id="productstock" value="<%= product.product_stock %>" placeholder="Enter Product stock*" required><br>
            <input type="text" name="productdesc" id="productdesc" value="<%= product.product_desc %>" placeholder="Enter description" required><br>
            <input type="submit" value="Update Product" id="updateProductButton">
        </form>
    </div>

    <script src="../scripts/productScript.js"></script>
</body>
</html>

