<%- include("partials/header", {loggedIn: loggedIn, name: username, pic: profile_pic}) %>

    <div class="mainDiv">
        <h1>Change Password</h1>
        <% if(error) { %>
            <p id="errorNode"><%= error %></p>
        <% } %>
        <form method="post", action="/changePassword">
            <input type="password" name="opassword" id="opassword" placeholder="Enter old password*" required><br>
            <input type="password" name="npassword" id="npassword" placeholder="Enter new password*" required><br>
            <input type="password" name="cpassword" id="cpassword" placeholder="Confirm password*" required><br>
            <input type="submit" value="Submit" class="btn">
        </form>
    </div>
</body>
</html>